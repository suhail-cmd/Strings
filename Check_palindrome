#python
class Solution:
    # @param A : string
    # @return an integer
    def solve(self, A):
        freq = {}
        odd_count = 0
        for i in A:
            if  i not in freq:
                freq[i] = 1
            else:
                freq[i] += 1
        for key,val in freq.items():
            if val % 2 != 0:
                odd_count += 1
        if odd_count > 1:
            return 0
        return 1
        

